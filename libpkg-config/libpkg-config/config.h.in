#ifndef LIBPKG_CONFIG_CONFIG_H
#define LIBPKG_CONFIG_CONFIG_H

/*
 * strndup() is not present on Windows while strl*() are only present on
 * *BSD and MacOS.
 *
 */
#if !defined(_WIN32)
#  define HAVE_STRNDUP 1
#endif

#if defined(__FreeBSD__) || \
    defined(__OpenBSD__) || \
    defined(__NetBSD__)  || \
    defined(__APPLE__)
#  define HAVE_STRLCPY 1
#  define HAVE_STRLCAT 1
#endif

#define LIBPKG_CONFIG_PROJECT_URL "$PROJECT_URL$"

#define PKG_DEFAULT_PATH  "$PKG_DEFAULT_PATH$"
#define SYSTEM_INCLUDEDIR "$SYSTEM_INCLUDEDIR$"
#define SYSTEM_LIBDIR     "$SYSTEM_LIBDIR$"

#endif /* LIBPKG_CONFIG_CONFIG_H */
